<!DOCTYPE html>
<html>

<head>
    <title>
        <%= blog ? 'Edit' : 'Add' %> Blog
    </title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <style type="text/tailwindcss">
        @layer components {
            .btn-primary {
                @apply bg-emerald-500 hover:bg-emerald-600 text-white font-medium py-2 px-4 rounded-md transition-colors;
            }
            .input-field {
                @apply w-full p-3 border border-emerald-200 rounded-md focus:ring-2 focus:ring-emerald-300 focus:border-emerald-300;
            }
        }
    </style>
</head>

<body class="bg-emerald-50 min-h-screen">
    <div class="container mx-auto px-4 py-8 max-w-2xl">
        <!-- Header -->
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-3xl font-bold text-emerald-700">
                <%= blog ? 'Edit' : 'Add' %> Blog
            </h1>
            <a href="/" class="text-emerald-600 hover:text-emerald-800 font-medium">
                ‚Üê Back to Blogs
            </a>
        </div>

        <!-- Form Card -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <form id="createForm" onsubmit="createBlog(event, 'createForm', 'title', 'content', '/')" method="POST"
                class="space-y-4">
                <div>
                    <label for="title" class="block text-sm font-medium text-emerald-700 mb-1">Title</label>
                    <input type="text" name="title" id="title" value="<%= blog ? blog.title : '' %>" required
                        class="input-field" placeholder="Enter blog title" />
                </div>

                <div>
                    <label for="title" class="block text-[12px] font-medium text-emerald-700 mb-1">Author</label>
                    <input type="text" name="author" id="auhtor" value="<%= blog ? blog.author : '' %>" required
                        class="input-field" placeholder="Enter Author Name" />
                </div>

                <div>
                    <label for="content" class="block text-sm font-medium text-emerald-700 mb-1">Content</label>
                    <textarea name="content" id="content" required rows="6" class="input-field"
                        placeholder="Write your blog content here"><%= blog ? blog.content : '' %></textarea>
                </div>

                <div class="flex justify-end space-x-3 pt-2">
                    <button type="submit" class="btn-primary">
                        <%= blog ? 'Update' : 'Create' %> Blog
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script src="../scripts/index.ts"></script>
</body>

</html>